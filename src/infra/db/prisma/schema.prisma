generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks Task[]
}

model Task {
  id String @id @default(uuid())
  title String
  description String? 
  status String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId String 
  user User @relation(fields: [userId], references: [id])

}